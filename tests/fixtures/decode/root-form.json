{
  "description": "Root form decoding tests",
  "tests": [
    {
      "name": "root object",
      "input": "a: 1\nb: 2",
      "expected": {"a": 1, "b": 2}
    },
    {
      "name": "root array",
      "input": "[3]: 1,2,3",
      "expected": [1, 2, 3]
    },
    {
      "name": "root primitive string",
      "input": "hello",
      "expected": "hello"
    },
    {
      "name": "root primitive number",
      "input": "42",
      "expected": 42
    },
    {
      "name": "root primitive true",
      "input": "true",
      "expected": true
    },
    {
      "name": "root primitive null",
      "input": "null",
      "expected": null
    }
  ]
}
